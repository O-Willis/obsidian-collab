{
	"compilerOptions": {
		"baseUrl": "./src",
		"outDir": "dist",
		"inlineSourceMap": true,
		"inlineSources": true,
		"module": "ESNext",
		"target": "ESNext",
		"allowJs": false,
		"types": ["puppeteer", "jest-environment-puppeteer", "expect-puppeteer"],
		"removeComments": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"importHelpers": false,
		"isolatedModules": true,
		"strictNullChecks": true,
		"lib": ["DOM", "ES5", "ES6", "ES7", "ESNext", "scripthost"],
		"allowSyntheticDefaultImports": true
	},
	"include": ["**/*.ts"],
	"buildOptions": {
		"incremental": true
	}
}
